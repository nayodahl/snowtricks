{% extends 'layout.html.twig' %}

{% block content %}

        <!-- Header -->
        <header class="masthead" style="background-image: url('/img/trick/{{ trick.content }}')">
            <div class="container">
                <div class="row">       
                    <div class="intro-text vertical-center smoothie col overlay">
                        <div class="intro-heading wow fadeIn heading-font" data-wow-delay="0.2s"><h2>{{ trick.title }}</h2></div>                                   
                    </div>
                </div>
            </div> 
