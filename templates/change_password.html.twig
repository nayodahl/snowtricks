{% extends 'layout.html.twig' %}

{% block title %}Changez votre mot de passe{% endblock %}

{% block content %}
    <section>
        <div class="container login-section-inner">
            <div class="row">
                <div class="col-lg-6 col-md-4 mx-auto">            
                    <h2 class="section-heading" id="forgottitle">Nouveau mot de passe</h2>

                    {{ form_start(form) }}
                        <hr>
                        {{ form_row(form.plainPassword.first, {
                            'attr': {'class': 'form-control'},                               
                        }) }}

                        {{ form_row(form.plainPassword.second, {
                            'attr': {'class': 'form-control'},                               
                        }) }}

                        <div id="success"></div>
                        <div class="form-group form-inline justify-content-center">
                            <a href="{{ path('user_profile') }}" class="btn btn-primary">Annuler</a>
                            <button type="submit" class="btn btn-primary" id="sendLoginButton">Sauvegarder le mot de passe</button>
                        </div>
                    {{ form_end(form) }}

                    <hr>

