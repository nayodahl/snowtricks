{% apply inline_css(source('@styles/email.css')) %}

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{ email.subject }}</title>
  </head>
  <body>     
      <div class="container">
          <div class="row">
              <div class="col-lg-8 col-md-10 mx-auto">                
                  <div class="header text-center">                      
                      <a href="{{ url('app_home') }}">
                          <img src="{{ email.image('@images/bg/bg1-mail.jpg') }}" class="logo" alt="snowtricks Logo">
                      </a>
                      <hr>
                      <br>
                      <h3>Bonjour à toi et bienvenue {{ user.username }} ! </h3>
                      <p>
                          Clique sur ce <a href="{{ absolute_url(path('app_activate', {token: user.token})) }}">lien</a> pour valider définitivement ton inscription au site SnowTricks !
                      </p>
                      <br>
                      <hr>
                      <small>
                          A bientôt sur le site <a href="{{ url('app_home') }}">SnowTricks</a> !
                      </small>
                      <br>
                      <hr>
                  </div>                
              </div>
          </div>
      </div>        
  </body>
</html>

{% endapply %}