{% extends 'layout.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block content %}               
    <section>
        <div class="container login-section-inner">
            <div class="row">
                <div class="col-lg-6 col-md-4 mx-auto">            
                    <h2 class="section-heading" id="forgottitle">Mot de passe oublié</h2>
                    
                    {% for flashError in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            {{ message }}
                        </div>    
                    {% endfor %}

                    {{ form_start(requestForm) }}
                        <hr>
                        {{ form_row(requestForm.email, {
                            'attr': {'class': 'form-control'}
                        }) }}
                        <div>
                            <small>
                                Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                            </small>
                        </div>
                        
                        <div id="success"></div>
                        <div class="form-group form-inline justify-content-center">
                            <a href="{{ path('app_login') }}" class="btn btn-primary">Annuler</a>
                            <button type="submit" class="btn btn-primary" id="sendLoginButton">Réinitialiser le mot de passe</button>
                        </div>
                    {{ form_end(requestForm) }}

                    <hr>
                </div>
            </div>    
        </div>
    </section>
{% endblock %}